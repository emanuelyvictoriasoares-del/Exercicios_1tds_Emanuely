#include <stdio.h>

//Declara 3 tipos de variáveis do tipo inteiro
int numero1;
int numero2;
int soma;

int main()
{
    //Pede pro usuário digitar dois números
  printf("Digite dois numeros:");
  scanf("%d%d", &numero1, &numero2); //lê os dois valores digitados
  
  //calcula a soma dos números
  soma = numero1 + numero2;
  
  //exibe o resultado na tela
  printf("A soma é: %d\n", soma);

    return 0;
}


ERRADO/////////////////////////////////////////////////////
#include <stdio.h>

int a,b,soma;
int main()
{
printf("Dgite dois numeros");
scanf("%d%d",&a,&b);
soma=a+b;
printf("A soma é %d",soma);
return 0;
}
